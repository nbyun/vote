<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">投票一览</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">所有投票</div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
          <tr>
            <th>No</th>
            <th>投票者ip</th>
            <th>投票者PC</th>
            <th>得票者</th>
            <th>投票时间</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% if @tickets.present? %>
              <% @tickets.each_with_index do |ticket, index| %>
                  <tr>
                    <td style="vertical-align: middle;"><%= index + 1 %></td>
                    <td style="vertical-align: middle;"><%= ticket.ip_address %></td>
                    <td style="vertical-align: middle;"><%= ticket.host_name %></td>
                    <td class="center" style="vertical-align: middle;"><%= ticket.player.try(:name) %></td>
                    <td class="center" style="vertical-align: middle;"><%= ticket.created_at.strftime('%Y/%m%d %H:%M:%S') %></td>
                    <td class="center" style="vertical-align: middle;">
                      <%= link_to(admin_ticket_path(ticket), data: { confirm: '删除这个投票？' }, method: :delete, class: 'btn btn-warning btn-circle') do %>
                          <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
          <% else %>
              <tr>
                <td colspan="6" style="text-align:center">暂无投票。</td>
              </tr>
          <% end %>

          </tbody>
        </table>

      </div>


    </div>

  </div>

</div>