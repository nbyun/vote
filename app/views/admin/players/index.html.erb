<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">比王一览</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">历届比王</div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
          <tr>
            <th>姓名</th>
            <th>人送外号</th>
            <th>投票数</th>
            <th>自拍</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% if @players.present? %>
              <% @players.each do |player| %>
                  <tr>
                    <td style="vertical-align: middle;"><%= player.name %></td>
                    <td style="vertical-align: middle;"><%= player.nickname %></td>
                    <td style="vertical-align: middle;">1</td>
                    <td class="center" style="vertical-align: middle;"><%= image_tag player.try(:player_picture).image.url(:thumb) rescue nil %></td>
                    <td class="center" style="vertical-align: middle;">
                      <%= link_to(edit_admin_player_path(player), class: 'btn btn-info btn-circle') do %>
                          <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to(admin_player_path(player), data: { confirm: '删除这个比王？' }, method: :delete, class: 'btn btn-warning btn-circle') do %>
                          <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
          <% else %>
              <tr>
                <td colspan="5" style="text-align:center">暂无比王。</td>
              </tr>
          <% end %>

          </tbody>
        </table>

      </div>


    </div>

  </div>

</div>